<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaos.sleepcry"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/todo4"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".BusecretaryActivity"
            >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:finishOnTaskLaunch="true"
            android:multiprocess="false"
            android:name = ".NotifyActivity"
            android:allowTaskReparenting="false"
            android:alwaysRetainTaskState="false"
            android:noHistory="false"
            android:process=":remote" >
        </activity>

        <receiver android:name=".NotifyReceiver" >
            <intent-filter >
                <action android:name="com.chaos.sleepcry.NEXT"/>
            </intent-filter>
            <intent-filter >
                <action android:name="com.chaos.sleepcry.PREVIOUS"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".BsWidget" 
            android:icon="@drawable/todo4">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/buse" 
                >
            </meta-data>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />                 
            </intent-filter>
                
        </receiver>

    </application>

</manifest>